<div class="container">
  <div class="row align-items-start">
    <div class="col-12">
      <h1 class="h3 mb-3 font-weight-normal text-center">Liste des tâches</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="home-searchbar">
      <%= form_tag tasks_path, class: "form-inline d-flex justify-content-center md-form form-sm active-cyan-2 mt-2", method: :get do %>
      <%= text_field_tag :query, params[:query], class: "form-control form-control-sm mr-3 w-50 pinkform", placeholder:"Rechercher par missions ..."%>
      <%= link_to do %>
      <i class="fas fa-search" aria-hidden="true"></i>
      <% end %>
      <% end %>
    </div>
  <div class="list-tasks row">
      <p><%= @tasks.count %> Tâches trouvées</p>
  </div>
  <div class="cards-product">
      <%= render 'card', tasks: @tasks %>
  </div>
</div>